{
  "name": "advent-of-code",
  "version": "1.0.0",
  "description": "My attempt of solving Advent of Code puzzles.",
  "private": true,
  "scripts": {
    "check": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint:js": "eslint --ignore-path .gitignore '**/*.{js,ts}'",
    "lint": "npm run lint:js",
    "test": "jest --maxWorkers=50% --watch",
    "test:ci": "jest --ci --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcobiedermann/advent-of-code.git"
  },
  "keywords": [
    "advent-of-code",
    "advent",
    "algorithms",
    "christmas",
    "problem-solving",
    "puzzle",
    "solutions"
  ],
  "author": "Marco Biedermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcobiedermann/advent-of-code/issues"
  },
  "homepage": "https://github.com/marcobiedermann/advent-of-code#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
