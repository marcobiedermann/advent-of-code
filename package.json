{
  "name": "advent-of-code",
  "version": "1.0.0",
  "description": "My attempt of solving Advent of Code puzzles.",
  "private": true,
  "scripts": {
    "check": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint:js": "eslint --ignore-path .gitignore '**/*.{js,ts}'",
    "lint": "npm run lint:js",
    "test": "jest --maxWorkers=50% --watch",
    "test:ci": "jest --ci --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcobiedermann/advent-of-code.git"
  },
  "keywords": [
    "advent-of-code",
    "advent",
    "algorithms",
    "christmas",
    "problem-solving",
    "puzzle",
    "solutions"
  ],
  "author": "Marco Biedermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcobiedermann/advent-of-code/issues"
  },
  "homepage": "https://github.com/marcobiedermann/advent-of-code#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@swc/core": "^1.3.4",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.1.1",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
